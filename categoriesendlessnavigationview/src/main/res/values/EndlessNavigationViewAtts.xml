<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EndlessNavigationView">
        <attr name="orientation" format="integer">
            <flag name="vertical" value="0"/>
            <flag name="horizontal" value="1"/>
        </attr>

        <attr name="selectionGravity" format="integer">
            <flag name="start" value="0"/>
            <flag name="end" value="1"/>
        </attr>

        <attr name="selectionMargin" format="dimension"/>

        <attr name="listBackground" format="color"/>
        <attr name="selectionBackground" format="color"/>

        <attr name="placeholderId" format="reference"/>

        <attr name="selectionInAnimation" format="reference"/>
        <attr name="selectionOutAnimation" format="reference"/>

    </declare-styleable>
</resources>